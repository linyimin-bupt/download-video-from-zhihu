{
  "compilerOptions": {
    "target": "es6"
    , "module": "commonjs"
    , "outDir": "dist"
    , "declaration": true
    , "sourceMap": true
    , "strict": false
    , "traceResolution": false
    , "esModuleInterop" : true
    , "resolveJsonModule": true
    , "lib": [
        "esnext"
    ]
  }
  , "exclude": [
      "node_modules/"
    , "dist/"
  ]
  , "include": [
       "bin/*.ts"
     , "scripts/**/*.ts"
     , "examples/**/*.ts"
     , "src/**/*.ts"
     , "tests/**/*.spec.ts"
  ]
}
